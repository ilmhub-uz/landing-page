@inherits LayoutComponentBase

<section class="bg-light py-0">
	<div class="container">
		<div class="row py-4">
			<div class="col-lg-8">
				<div class="col md-6">
				<h6 class="mb-3 font-base bg-primary text-white py-2 px-4 rounded-2 d-inline-block">@course.Tag</h6>
				</div>
				<!-- Title -->
				<h2>@course.Title</h2>
				
			</div>
		</div>
	</div>
</section>

@code{
    [Parameter]
    public Course course { get; set; }
}