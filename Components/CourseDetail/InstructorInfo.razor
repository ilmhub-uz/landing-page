@inherits LayoutComponentBase

<div class="card mb-0 ">
    <div class="row g-0 align-items-center">
        <div class="col-md-5 mb-4">
            <!-- Image -->
            <img src="/assets/images/avatar/@instructor.BannerId" class="img-fluid rounded-3" alt="instructor-image" >
        </div>
        <div class="col-md-7 mb-4">
            <!-- Card body -->
            <div class="card-body ">
                <!-- Title -->
                <h3 class="card-title mb-0 ">@instructor.InstructorName</h3>
                <p class="mb-2">@instructor.MentorWorkPlace</p>
                <!-- Social button -->
                <ul class="list-inline mb-3">
                    <li class="list-inline-item me-3">
                        <a target="_blank" rel="noopener noreferrer" href="@instructor.GithubUrl" class="fs-5 text-github"><i class="fab fa-github"></i></a>
                    </li>
                    <li class="list-inline-item me-3">
                        <a target="_blank" rel="noopener noreferrer" href="@instructor.InstagramUrl" class="fs-5 text-instagram"><i class="fab fa-instagram"></i></a>
                    </li>
                    <li class="list-inline-item me-3">
                        <a target="_blank" rel="noopener noreferrer" href="@instructor.FacebookUrl" class="fs-5 text-facebook"><i class="fab fa-facebook"></i></a>
                    </li>
                    <li class="list-inline-item me-3">
                        <a target="_blank" rel="noopener noreferrer" href="@instructor.LinkedInUrl" class="fs-5 text-linkedin"><i class="fab fa-linkedin"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a target="_blank" rel="noopener noreferrer" href="@instructor.TelegramUrl" class="fs-5 text-telegram"><i class="fab fa-telegram"></i></a>
                    </li>
                </ul>

                <!-- Info -->
                <ul class="list-inline">
                    <li class="list-inline-item">
                        <div class="d-flex align-items-center me-3 mb-2">
                            <span class="icon-md bg-orange bg-opacity-10 text-orange rounded-circle"><i class="fas fa-user-graduate"></i></span>
                            <span class="h6 fw-light mb-0 ms-2"><strong>@instructor.StudentCount</strong>+ bitiruvchilar</span>
                        </div>
                    </li>
                    <li class="list-inline-item">
                        <div class="d-flex align-items-center me-3 mb-2">
                            <span class="icon-md bg-warning bg-opacity-10 text-warning rounded-circle"><i class="fas fa-play"></i></span>
                            <span class="h6 fw-light mb-0 ms-2"><strong>@(int.Parse(CoursesCount)+1)</strong>+ Kurslar </span>
                        </div>
                    </li>
                    <li class="list-inline-item">
                        <div class="d-flex align-items-center me-3 mb-2">
                            <span class="icon-md bg-warning bg-opacity-10 text-warning rounded-circle"><i class="fas fa-star"></i></span>
                            <span class="h6 fw-light mb-0 ms-2"><strong>@instructor.Experience</strong>+ yillik tajriba </span>
                        </div>
                    </li>
                </ul>
                <div class="d-flex align-items-center ">
                    <span class="icon-md text-dark mb-0 bg-light rounded-3"><i class="fas fa-graduation-cap"></i></span>
                    <div class="ms-3">
                        <h6 class="mb-0">@instructor.University</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code{
    [Parameter]
    public Instructor instructor { get; set; }
    [Parameter]
    public string CoursesCount { get; set; }
}